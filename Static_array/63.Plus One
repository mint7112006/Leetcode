class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        string X="";
        int n = digits.size();
        int i = n-1;
        while(i > 0 && digits[i] == 9){
            X+='0';
            i--;
        }
        if(i > 0){
            X+=((digits[i]+1)+'0');
            for(int j = i-1; j >= 0; j--)X+=(digits[j]+'0');
        }else{
            if(digits[i] == 9)X = X +'0' +'1';
            if(digits[i] != 9)X += ((digits[i]+1)+'0');
        }
        vector<int> ans(X.size());
        int len = X.size()-1;
        for(int j = 0; j <= X.size() - 1; j++){
            ans[len] =( X[j]-'0');
            len--;
        }
        return ans;
    }
};
