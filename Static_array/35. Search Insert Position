class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        int n = nums.size();
        int index;
        bool find1 = false;
        bool find2 = false;
        for(int i = 0; i < n; i++){
            if(nums[i] == target){
                index = i;
                find1 = true;
                break;
            }
        }
        if(find1 == true)return index;
        for(int i = 0; i < n; i++){
            if(nums[i] > target){
                index = i;
                find2 = true;
                break;
            }
        }
        if(find2 == true)return index;
        return n;
    }
};
